
@{
    ViewBag.Title = "List";
    Layout = "_Layout";
}

@model List<StudentPortal.Models.Entieis.students>

<h1>Students</h1>

<table class="table">
    <thead>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th> </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var students in Model)
    {
        <tr>
            <td>@students.Id</td>
            <td>@students.Name</td>
            <td>@students.Email</td>
            <td>@students.Phone</td>
            <td>
                <a class="btn btn-primary" asp-controller="Students" asp-action="Edit" asp-route-Id="@students.Id">Edit</a>
                <a class="btn btn-danger" asp-action="Delete" asp-controller="Students" asp-route-Id="@students.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<a class="btn btn-outline-primary" asp-action="Add" asp-controller="Students">Add</a>
